<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.tc.activity.ChangePhoneActivity">

    <include layout="@layout/header_layout" />


    <LinearLayout
        style="@style/set_info_ll_style"
        android:layout_marginTop="80dp">

        <TextView
            style="@style/set_info_tv_name_style"
            android:text="新手机号：" />

        <EditText
            android:id="@+id/edt_change_phone"
            style="@style/set_info_edt_value_style"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        style="@style/set_info_ll_style"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/set_info_tv_name_style"
            android:text="验证码：" />

        <EditText
            android:id="@+id/edt_get_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone" />

        <Button
            android:id="@+id/btn_get_phone_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_corner_common_main_color_10dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/secondary_textSize" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/set_info_button_style"
        android:text="更改手机号码" />


</LinearLayout>
