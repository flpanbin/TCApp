<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <include layout="@layout/list_item_user_info" />

            </RelativeLayout>


            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10dp"
                android:minHeight="25dp"
                android:textColor="@color/gray_33"
                android:text="吐槽内容吐槽内容吐槽内容吐槽内容吐槽内容吐槽内容"
                android:textSize="@dimen/secondary_textSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:background="@drawable/shape_corner_common_gray_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_target"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_tc_target_text"
                    android:padding="5dp"
                    android:textSize="@dimen/secondary_textSize" />

                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/gray_33"
                    android:text="阿萨德法斯蒂sdsdfasf斯蒂芬斯蒂芬萨芬的发生地方fs芬岁"
                    android:textSize="@dimen/smaller_textSize" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/divider_line_horizontal" />
</LinearLayout>

