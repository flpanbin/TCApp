<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/header_layout" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="42dp"
            android:src="@drawable/icon_logo_green" />

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-35dp"
            android:background="@drawable/bg_version_name"
            android:gravity="center"
            android:text="BigMouth 1.2.1"
            android:textColor="@color/main_color"
            android:textSize="@dimen/secondary_textSize"
            android:textStyle="bold" />

        <include layout="@layout/divider_line_horizontal" />

        <TextView
            android:id="@+id/tv_version_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="版本说明"
            android:textColor="@color/main_color"
            android:textSize="@dimen/secondary_textSize" />

        <include layout="@layout/divider_line_horizontal" />

        <LinearLayout
            android:id="@+id/ll_version_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测更新"
                android:textColor="@color/main_color"
                android:textSize="@dimen/secondary_textSize" />

            <TextView
                android:id="@+id/tv_not_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_corner_common_main_color_10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="new"
                android:textColor="@color/white"
                android:textSize="@dimen/secondary_textSize" />

            <TextView
                android:id="@+id/tv_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="已是最新版本"
                android:textColor="@color/gray_8f"
                android:textSize="@dimen/secondary_textSize" />
        </LinearLayout>

        <include layout="@layout/divider_line_horizontal" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Powered by 1024"
        android:textColor="@color/main_color"
        android:textSize="@dimen/smaller_textSize" />
</RelativeLayout>