<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.tc.activity.MyInformationActivity">

    <RelativeLayout
        style="@style/top_bar_style_common"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_return" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/top_title_font_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="@color/main_color"></TextView>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
           android:padding="10dp"
            android:text="保存"
            android:textColor="@color/main_color"
            android:textSize= "@dimen/secondary_textSize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_info"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_user_avatar" />

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_default_avatar" />

            </FrameLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_corner_user_info_nickname"
                    android:enabled="false"
                    android:inputType="text|textPersonName"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:paddingTop="5dp"
                    android:text="西红柿"
                    android:textColor="@color/main_color" />

                <ImageView
                    android:id="@+id/iv_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/edt_name"
                    android:layout_gravity="bottom"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:layout_toRightOf="@id/edt_name"
                    android:src="@drawable/icon_modify" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="66dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_sex"
                style="@style/user_info_rl_style">

                <TextView
                    style="@style/user_info_text_name_style"
                    android:text="性别" />

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/user_info_text_value_style"
                    android:text="男" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type"
                style="@style/user_info_rl_style">

                <TextView
                    style="@style/user_info_text_name_style"
                    android:text="状态" />

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/user_info_text_value_style"
                    android:text="在校大学生" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_birthday"
                style="@style/user_info_rl_style">

                <TextView
                    style="@style/user_info_text_name_style"
                    android:text="生日" />

                <TextView
                    android:id="@+id/tv_birthday"
                    style="@style/user_info_text_value_style"
                    android:text="1993-10-12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_entrance_time"
                style="@style/user_info_rl_style">

                <TextView
                    style="@style/user_info_text_name_style"
                    android:text="入校时间" />

                <TextView
                    android:id="@+id/tv_entrance_time"
                    style="@style/user_info_text_value_style"
                    android:text="1993-10-12" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


